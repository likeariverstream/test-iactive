{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react-refresh"
  ],
  "rules": {
    "react-refresh/only-export-components": "warn",
    "quotes": ["error", "single"],
    "max-len": [
      2,
      120
    ],
    "semi": [
      2,
      "never"
    ],
    "indent": [
      "error",
      4
    ],
    "linebreak-style": 0,
    "no-redeclare": 0
  }
}
